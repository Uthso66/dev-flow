generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  tasks     Task[]   @relation("UserTasks")
  sessions  Session[]@relation("UserSessions")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(todo)
  priority    TaskPriority @default(medium)
  estimate    Float? 
  tags        String[]  @default([])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  dueDate     DateTime?
  user        User?     @relation(fields: [userId], references: [id], name: "UserTasks")
  userId      String?
  sessions    Session[] @relation("TaskSessions")
}

model Session {
  id              String   @id @default(cuid())
  task            Task?    @relation("TaskSessions", fields: [taskId], references: [id])
  taskId          String?
  user            User?    @relation("UserSessions", fields: [userId], references: [id])
  userId          String?
  type            SessionType
  startedAt       DateTime
  endedAt         DateTime
  durationMinutes Int
  createdAt       DateTime @default(now())
}

enum TaskStatus {
  todo
  in_progress
  done
  blocked
}

enum TaskPriority {
  low
  medium
  high
}

enum SessionType {
  coding
  debugging
  review
  reading
}
